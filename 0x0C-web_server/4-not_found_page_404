#!/usr/bin/env bash
# Configure your Nginx server to have a custom 404 page that contains

sudo apt-get update -y
sudo apt-get install -y nginx

echo "Ceci n'est pas une page" | sudo tee /usr/share/nginx/html/404.html > /dev/null

echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;

    error_page 404 /404.html;
    location = /404.html {
        internal;
    }

    root /var/www/html;
    index index.html index.htm;
}" | sudo tee /etc/nginx/sites-available/custom_404 > /dev/null

sudo ln -s /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/


sudo service nginx restart

sudo nginx -t
